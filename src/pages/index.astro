---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Niieux',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Download now',
        href: 'https://github.com/Niieux/niieux-build',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'GitHub', href: 'https://github.com/Niieux', target: '_blank' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Niieux Desktop Screenshot' }}
  >
    <Fragment slot="title">
      A all new GNU/Linux <span class="hidden xl:inline">distro</span>
      <span class="text-accent dark:text-white"></span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Niieux</span> <span class="hidden xl:inline">is a Debian 13-based Linux distro designed for beginners and developers, featuring a modified, faster and more customizable GNOME desktop, no bloatware, and Flatpak support.</span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->
  <Features
    id="features"
    tagline="Features"
    title="What you get with Niieux"
    items={[
      {
        title: 'Limitless Customizations',
        description:
          'Niieux comes with a Theme Switcher app which lets you effortlessly customize your desktop experience, it allows you to pick between new looks to make your system feel more home.',
        icon: 'tabler:palette',
      },
      {
        title: 'Easy to use',
        description:
          'Easy to use for everyone with an optimized GNOME Desktop which allows everyone to work easily with the click of a button.',
        icon: 'tabler:components',
      },
      {
        title: 'Lightning Fast',
        description:
          'Niieux is tailored for the best performance possible while trying not to compromise the look and feel of the operating system.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Open Source',
        description:
          'Niieux is completely open-source under the GPL 3.0 license to allow you to explore, modify and contribute.',
        icon: 'tabler:bulb',
      },
    ]}
  />
  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
  </Fragment>

  <!-- Content Widget **************** -->
  <Content
    isReversed
    tagline="Customizing Niieux"
    title="Niieux Theme Switcher: Limitless Customizations"
    items={[
      {
        title: 'Apply themes with the click of a button',
        description:
          'Launch the Theme Switcher app from your app menu and click the theme you want to apply.',
      },
      {
        title: 'Preinstalled themes',
        description:
          'Niieux comes with two themes preinstalled: MacOS-Like and Ubuntu-Like.',
      },
      {
        title: 'Create your own theme',
        description:
          'You can even create your own theme through the online theme maker website and download it. You will download it as a JSON file which you can right click > open with > Niieux Theme Installer[...]',
      },
    ]}
    image={{
      src: '~/assets/images/theme-switcher-screenshot.png',
      alt: 'Niieux Theme Switcher Screenshot',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->
  <Content
    isReversed
    tagline="Installing applications on Niieux"
    title="Niieux App Center: The place to install applications on Niieux"
    items={[
      {
        title: 'Optimized for fast installs',
        description:
          'Niieux App Center is optimized for the fastest installs possible with low RAM usage.',
      },
      {
        title: 'Flatpak, Flathub and APT integration',
        description:
          'Niieux App Center has got inbuilt support for Flatpak, Flathub and APT applications.',
      },
      {
        title: 'Automation made easy',
        description:
          'Niieux App Center allows you to automate app updates and process runs.',
      },
    ]}
    image={{
      src: '~/assets/images/niieux-app-center-icon.png',
      alt: 'Niieux App Center screenshot',
    }}
  >
  </Content>

  <!-- Content Widget **************** -->
  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Enhanced user engagement',
        description:
          'Captivate your audience with interactive elements, intuitive navigation, and visually appealing layouts, encouraging longer visits.',
      },
      {
        title: 'Continuous improvement',
        description:
          'Ensure your website stays aligned with the latest trends and technologies through regular updates and enhancements.',
      },
      {
        title: 'Time and resource efficiency',
        description:
          'Skip the time-consuming process of building a website from scratch and launch your online presence sooner with AstroWind.',
      },
      {
        title: 'Community support',
        description: `Join the growing AstroWind community for insights, resources, and assistance, ensuring you're never alone on your web development journey.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">Designed to foster growth and success.</Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->
  <Steps
    title="Get your dream website up and running in no time with AstroWind."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Download</span>',
        description:
          "Kickstart with GitHub! Either fork the AstroWind template or simply click 'Use this template'. Your canvas awaits, ready for your digital masterpiece. In just a few clicks, you've already s[...]",
        icon: 'tabler:package',
      },
      {
        title: 'Step 2: <span class="font-medium">Add content</span>',
        description:
          "Pour your vision into it. Add images, text, and all that jazz to breathe life into your digital space. Remember, it's the content that tells your story, so make it captivating.",
        icon: 'tabler:letter-case',
      },
      {
        title: 'Step 3: <span class="font-medium">Customize styles</span>',
        description:
          'Give it your personal touch. Tailor colors, fonts, and layouts until it feels just right. Your unique flair, amplified by AstroWind! Precision in design ensures a seamless user experience.[[...]',
        icon: 'tabler:paint',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Dive into the following questions to gain insights into the powerful features that AstroWind offers and how it can elevate your web development journey."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why Niieux?',
        description:
          "Niieux is faster than most GNU/Linux distros that offer the same level of customizability.",
      },
      {
        title: 'How do I install ?',
        description:
          'We offer an easy installation guide at <a href="https://github.com/Niieux/docs/blob/main/install-guide.md" target="_blank" rel="noopener noreferrer">https://github.com/Niieux/docs/install-guide.md</a>.',
      },
      {
        title: 'What do I do if I need help using Niieux?',
        description:
          'Feel free to contact <a href="mailto:support@niieux.com" target="_blank" rel="noopener noreferrer">support@niieux.com</a> for support or open an issue on our <a href="https://github.com/Niieux" target="_blank" rel="noopener noreferrer">GitHub</a>.',
      },
      {
        title: "I need help making a Theme on the Theme Maker?",
        description:
          'Visit <a href="https://github.com/Niieux/docs/theme-maker-guide.md" target="_blank" rel="noopener noreferrer">https://github.com/Niieux/docs/blob/main/theme-maker-guide.md</a> for an amazing guide on using the Theme maker.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Install now',
        href: 'https://iso.niieux.com',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
  </CallToAction>
</Layout>
